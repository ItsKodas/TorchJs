{
	"compilerOptions": {
		"target": "es5",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,

		"outDir": "../dist/Client",
		"sourceMap": false,

		"baseUrl": ".",
		"paths": {
			"@lib/*": ["lib/*"]
		}
	},

	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "commonjs"
		}
	},

	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
